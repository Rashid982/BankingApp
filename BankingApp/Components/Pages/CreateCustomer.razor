@page "/createcustomer"
@inherits CreateCustomerBase

<h3>Create Customer</h3>

<EditForm Model="Customer" OnValidSubmit="HandleValidSubmit">

    <div class="form-check row">

        <label for="name" class="col-sm-2 col-form-label">
            Name
        </label>
        <div class="col-sm-10">
            <InputText @bind-Value="Customer.Name"/>           
            <br />            
        </div>

        <label for="surname" class="col-sm-2 col-form-label">
            Surname
        </label>
        <div class="col-sm-10">
            <InputText @bind-Value="Customer.Surname" />
            <br />
        </div>

        <label for="birthdate" class="col-sm-2 col-form-label">
            Birthday
        </label>
        <div class="col-sm-10">
            <InputDate @bind-Value="Customer.BirthDate" />
            <br />
        </div>

        <label for="name" class="col-sm-2 col-form-label">
            Phone number
        </label>
        <div class="col-sm-10">
            <InputText @bind-Value="Customer.PhoneNumber" />
            <br />
        </div>

    </div>

    <br/>

    <button class="btn btn-primary" type="submit">Create customer</button>
</EditForm>


